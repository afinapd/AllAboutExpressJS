FROM node:lts-alpine3.9
WORKDIR /apps
COPY . .
RUN npm install

ENV NODE_ENV=production
ENV APP_NAME=SMM
ENV APP_PORT=3500
ENV HOST_LISTEN=0.0.0.0
ENV LOG_PATH=/apps/smm-error.log
ENV LOG_LEVEL=debug
ENV SECRET_KEY=secretkey
ENV DB_TYPE=mysql
ENV DB_HOST=10.34.5.132
ENV DB_PORT=3306
ENV DB_USERNAME=root
ENV DB_PASSWORD=afinapd
ENV DB_NAME=exam

ENTRYPOINT ["node","index.js"]